<div class="w-full">
    <h2 class="text-blue-400 px-1 text-3xl font-bold uppercase">Real time products</h2>
    <button class="bg-violet-500 text-white py-2 px-4 font-bold text-sm rounded-md" id="btnForm">
        Crear nuevo producto
    </button>

    <div class="mt-3 grid grid-cols-4 gap-2" id="cardsContainer">

    </div>

</div>


<div class="bg-black bg-opacity-30 w-screen h-screen fixed top-0 left-0 flex items-center justify-center z-10 hidden" id="form">

    <form class="bg-white w-full  md:w-1/3 p-5 flex flex-col items-start justify-start gap-3 rounded-md shadow-md relative" id="formulario" action="" method="post">

        <div class="absolute top-5 right-5" role="button" id="btnCloseForm">
            <svg class="text-red-500 w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
            </svg>
        </div>

        <h2 class="text-violet-500 text-2xl font-bold">Nuevo Producto</h2>

        <div class="w-full flex flex-col gap-2">
            <div class="w-full flex items-center justify-start gap-4">
                <div class="w-full md:w-1/2">
                    <label class="text-blue-400 text-xs uppercase font-bold py-2" for="title">Producto</label>
                    <input class="bg-gray-100 w-full p-2 text-sm rounded-md outline-violet-500 focus:outline-1" type="text" name="title">
                </div>
                <div class="w-full md:w-1/2">
                    <label class="text-blue-400 text-xs uppercase font-bold py-2" for="description">Descripción</label>
                    <input class="bg-gray-100 w-full p-2 text-sm rounded-md outline-violet-500 focus:outline-1" type="text" name="description">
                </div>
            </div>
            <div class="w-full flex items-center justify-start gap-4">
                <div class="w-full md:w-1/2">
                    <label class="text-blue-400 text-xs uppercase font-bold py-2" for="code">Código</label>
                    <div class="relative">
                        <input
                            class="bg-gray-100 w-full p-2 pl-5 text-sm uppercase rounded-md outline-violet-500 focus:outline-1"
                            type="text"
                            name="code"
                        >
                        <span class="absolute bottom-0 left-0 w-5 h-full flex items-center justify-center">#</span>
                    </div>
                </div>
                <div class="w-full md:w-1/2">
                    <label class="text-blue-400 text-xs uppercase font-bold py-2" for="price">Precio</label>
                    <div class="relative">
                        <input
                            class="bg-gray-100 w-full p-2 pl-5 text-sm rounded-md outline-violet-500 focus:outline-1"
                            type="number"
                            name="price"
                        >
                        <span class="absolute bottom-0 left-0 w-5 h-full flex items-center justify-center">$</span>
                    </div>
                </div>
            </div>
            <div class="w-full flex items-center justify-start gap-4">
                <div class="w-full md:w-1/2">
                    <label class="text-blue-400 text-xs uppercase font-bold py-2" for="stock">Stock</label>
                    <input class="bg-gray-100 w-full p-2 text-sm rounded-md outline-violet-500 focus:outline-1" type="number" name="stock">
                </div>
                <div class="w-full md:w-1/2">
                    <label class="text-blue-400 text-xs uppercase font-bold py-2" for="category">Categoría</label>
                    <input class="bg-gray-100 w-full p-2 text-sm rounded-md outline-violet-500 focus:outline-1" type="text" name="category">
                </div>
            </div>
            <div class="w-full flex items-center justify-start gap-4">
                <div class="w-full md:w-1/2 pt-4">
                    <label class="relative inline-flex items-center mb-5 cursor-pointer">
                        <input class="sr-only peer" type="checkbox" name="status">
                        <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-violet-300 dark:peer-focus:ring-violet-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-violet-600"></div>
                        <span class="text-blue-400 text-xs uppercase font-bold px-2">Status</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="w-full flex flex-col items-center justify-center gap-2">
            <button class="bg-blue-500 text-white py-2 px-4 font-bold text-sm rounded-md" type="submit">
                Guardar producto
            </button>
            <button class="text-red-500 py-2 px-4 font-bold text-sm rounded-md" type="reset">
                Vaciar formulario
            </button>
        </div>

    </form>

</div>


<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/app.js"></script>