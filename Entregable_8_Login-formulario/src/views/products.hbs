{{> navbar }}

<div class="w-full">
    <div class="w-full flex items-center justify-center">
        <h2 class="text-violet-500 text-xl font-extrabold uppercase border-cyan-300 border-b-8">Productos</h2>
    </div>
</div>


<div class="w-full my-2 rounded-md shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs uppercase bg-gray-100 text-violet-500 whitespace-nowrap">
                <tr>
                    <th class="py-3 px-6">title</th>
                    <th class="py-3 px-6">code</th>
                    <th class="py-3 px-6">price</th>
                    <th class="py-3 px-6">status</th>
                    <th class="py-3 px-6">category</th>
                </tr>
            </thead>
            <tbody id="products-container">
                {{#each data.docs }}
                    <tr class="fila" role="button" id="{{this._id}}">
                        <td class="py-4 px-6">{{this.title}}</td>
                        <td class="py-4 px-6">{{this.code}}</td>
                        <td class="py-4 px-6">{{this.price}}</td>
                        <td class="py-4 px-6">{{this.status}}</td>
                        <td class="py-4 px-6">{{this.category}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="mt-4 flex items-center justify-center gap-2" id="index-pages">
        {{#if data.hasPrevPage}}
            <a href="/products?page={{data.prevPage}}" class="bg-cyan-300 text-white py-2 px-4 rounded-md text-sm font-medium">Anterior</a>
        {{/if}}
        {{#if data.hasNextPage}}
            <a href="/products?page={{data.nextPage}}" class="bg-cyan-300 text-white py-2 px-4 rounded-md text-sm font-medium">Siguiente</a>
        {{/if}}
    </div>
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/app.js" type="module"></script>