{{> navbar }}

<div class="w-full">
    <div class="w-full flex items-center justify-center">
        <h2 class="text-white text-xl font-extrabold uppercase border-cyan-300 border-b-8">Productos</h2>
    </div>
</div>


<div class="w-full my-2 rounded-md shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="bg-neutral-800 text-xs uppercase whitespace-nowrap">
                <tr>
                    <th class="py-3 px-6">title</th>
                    <th class="py-3 px-6">code</th>
                    <th class="py-3 px-6">price</th>
                    <th class="py-3 px-6">status</th>
                    <th class="py-3 px-6">category</th>
                </tr>
            </thead>
            <tbody id="products-container">
                {{!-- Lista de Productos --}}
                {{#each data.docs }}
                    <tr class="w-full fila" role="button" id="{{this._id}}">
                        <td class="py-4 px-6">{{this.title}}</td>
                        <td class="py-4 px-6">{{this.code}}</td>
                        <td class="py-4 px-6">{{this.price}}</td>
                        <td class="py-4 px-6">{{this.status}}</td>
                        <td class="py-4 px-6">{{this.category}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="mt-4 flex items-center justify-center gap-2" id="index-pages">
        {{#if data.hasPrevPage}}
            <a href="/products?page={{data.prevPage}}">
                <button class="bg-black w-40 py-2 transition-all ease-in-out duration-300 outline outline-2 -outline-offset-2 outline-neutral-500 hover:bg-neutral-800" type="submit">Anterior</button>
            </a>
        {{/if}}
        {{#if data.hasNextPage}}
            <a href="/products?page={{data.nextPage}}">
                <button class="bg-black w-40 py-2 transition-all ease-in-out duration-300 outline outline-2 -outline-offset-2 outline-neutral-500 hover:bg-neutral-800" type="submit">Siguiente</button>
            </a>
        {{/if}}
    </div>
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/app.js" type="module"></script>