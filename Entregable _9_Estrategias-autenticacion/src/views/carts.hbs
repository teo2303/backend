{{> navbar }}

<div class="w-full">
    <div class="w-full flex items-center justify-center">
        <h2 class="text-white text-xl font-extrabold uppercase border-cyan-300 border-b-8">Carritos de compra</h2>
    </div>
</div>

<div class="w-full my-2 rounded-md shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="bg-neutral-800 text-xs uppercase whitespace-nowrap">
                <tr>
                    <th class="py-3 px-6"></th>
                    <th class="py-3 px-6">carts</th>
                    <th class="py-3 px-6">Products</th>
                </tr>
            </thead>
            <tbody id="products-container">
                {{#each carritos }}
                    <tr class="fila">
                        <td class="py-4 px-6">
                            <a class="bg-violet-500 text-white py-2 px-4 rounded-md font-medium" href="/carts/{{this._id}}">Ver productos</a>
                        </td>
                        <td class="py-4 px-6">Carrito {{@index}}</td>
                        <td class="py-4 px-6">{{this.products.length}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>