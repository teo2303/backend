{{> navbar }}

<div class="w-full">
    <div class="w-full flex items-center justify-center">
        <h2 class="text-white text-xl font-extrabold uppercase border-cyan-300 border-b-8">Productos del carrito</h2>
    </div>
</div>

<div class="w-full my-2 rounded-md shadow-sm">
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="bg-neutral-800 text-xs uppercase whitespace-nowrap">
                <tr>
                    <th class="py-3 px-6">title</th>
                    <th class="py-3 px-6">code</th>
                    <th class="py-3 px-6">price</th>
                    <th class="py-3 px-6">category</th>
                    <th class="py-3 px-6">Quantity</th>
                </tr>
            </thead>
            <tbody id="products-container">
                {{#each products }}
                    <tr class="fila" role="button" id="{{this._id}}">
                        <td class="py-4 px-6">{{this._id.title}}</td>
                        <td class="py-4 px-6">{{this._id.code}}</td>
                        <td class="py-4 px-6">{{this._id.price}}</td>
                        <td class="py-4 px-6">{{this._id.category}}</td>
                        <td class="py-4 px-6">{{this.quantity}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>