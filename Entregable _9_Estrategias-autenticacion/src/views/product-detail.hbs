{{> navbar }}

<div class="w-full flex items-start justify-start">
    <a class="bg-violet-500 py-2 px-4 rounded-md" href="/products">
        <svg class="text-white w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
    </a>
</div>

<div class="w-full md:w-3/5 mx-auto p-4 shadow-lg rounded-md flex flex-col items-center justify-center gap-3">
    {{#if product}}
        <h2 class="text-violet-500 uppercase text-2xl text-center font-extrabold"> {{ product.title }} </h2>

        <div class="w-full">
            <h3 class="text-fuchsia-400 uppercase text-xl font-bold">Codigo: </h3>
            <p class="text-opacity-70 text-lg">{{ product.code }}</p>
        </div>
        <div class="w-full">
            <h3 class="text-fuchsia-400 uppercase text-xl font-bold">Descripcion: </h3>
            <p class="text-opacity-70 text-lg">{{ product.description }}</p>
        </div>
        <div class="w-full">
            <h3 class="text-fuchsia-400 uppercase text-xl font-bold">Precio: </h3>
            <p class="text-opacity-70 text-lg">${{ product.price }}</p>
        </div>
        <div class="w-full">
            <h3 class="text-fuchsia-400 uppercase text-xl font-bold">Status: </h3>
            <p class="text-opacity-70 text-lg">{{ product.status }}</p>
        </div>
        <div class="w-full">
            <h3 class="text-fuchsia-400 uppercase text-xl font-bold">Stock: </h3>
            <p class="text-opacity-70 text-lg">{{ product.stock }}</p>
        </div>
        <div class="w-full">
            <h3 class="text-fuchsia-400 uppercase text-xl font-bold">Categoria: </h3>
            <p class="text-opacity-70 text-lg">{{ product.category }}</p>
        </div>

        <button class="button-add-to-cart bg-sky-400 text-white py-2 px-4 font-bold rounded-md" id="{{product._id}}">AÃ±adir al carrito</button>
    {{/if}}
</div>

<script src="/js/addToCart.js"></script>